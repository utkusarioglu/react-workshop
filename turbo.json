{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["build/**"]
    },
    "run": {
      "dependsOn": ["build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "upgrade-all": {
      "dependsOn": ["^upgrade-all"],
      "cache": false
    }
  }
}
